{
  "manifest_version": 3,
  "name": "GestureSelect",
  "version": "1.0",
  "description": "Control Chrome with hand gestures. Requires the Python pipeline (main.py) to be running.",
  "permissions": [
    "activeTab",
    "tabs",
    "scripting",
    "storage",
    "sessions",
    "windows",
    "alarms"
  ],
  "host_permissions": [
    "<all_urls>",
    "http://localhost:8765/*",
    "http://localhost:8766/*",
    "http://localhost:8767/*",
    "ws://localhost:8765/*"
  ],
  "content_security_policy": {
    "extension_pages": "default-src 'self'; img-src 'self' http://localhost:8767 data: blob:; connect-src 'self' ws://localhost:8765 http://localhost:8766 http://localhost:8767; style-src 'self' 'unsafe-inline'"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content_script.js"
      ],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}