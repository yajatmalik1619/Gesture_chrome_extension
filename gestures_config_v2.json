{
  "settings": {
    "websocket_host": "localhost",
    "websocket_port": 8765,
    "max_num_hands": 2,
    "detection_confidence": 0.80,
    "tracking_confidence": 0.70,
    "model_complexity": 1,
    "gesture_buffer_size": 5,
    "dynamic_buffer_size": 5,
    "position_history_size": 25,
    "scroll_speed": 3,
    "two_hand_multiplier": {
      "enabled": true,
      "activation": "hold",
      "hold_duration_seconds": 0.5,
      "max_fingers": 5,
      "max_product": 25
    }
  },
  "actions": {
    "new_window": {
      "label": "Open New Window",
      "type": "keyboard",
      "repeatable": false,
      "shortcut": "ctrl+n",
      "shortcut_mac": "cmd+n"
    },
    "new_incognito_window": {
      "label": "Open Incognito Window",
      "type": "keyboard",
      "repeatable": false,
      "shortcut": "ctrl+shift+n",
      "shortcut_mac": "cmd+shift+n"
    },
    "tab_new": {
      "label": "New Tab",
      "type": "keyboard",
      "repeatable": false,
      "shortcut": "ctrl+t",
      "shortcut_mac": "cmd+t"
    },
    "tab_reopen": {
      "label": "Reopen Closed Tab",
      "type": "keyboard",
      "repeatable": false,
      "shortcut": "ctrl+shift+t",
      "shortcut_mac": "cmd+shift+t"
    },
    "tab_switch_right": {
      "label": "Switch Tab Right",
      "type": "keyboard",
      "repeatable": false,
      "modifier": "finger_count",
      "shortcut": "ctrl+tab",
      "shortcut_mac": "cmd+opt+right"
    },
    "tab_switch_left": {
      "label": "Switch Tab Left",
      "type": "keyboard",
      "repeatable": false,
      "modifier": "finger_count",
      "shortcut": "ctrl+shift+tab",
      "shortcut_mac": "cmd+opt+left"
    },
    "tab_jump_rightmost": {
      "label": "Jump to Rightmost Tab",
      "type": "keyboard",
      "repeatable": false,
      "shortcut": "ctrl+9",
      "shortcut_mac": "cmd+9"
    },
    "go_home": {
      "label": "Go to Home Page",
      "type": "keyboard",
      "repeatable": false,
      "shortcut": "alt+home",
      "shortcut_mac": "cmd+shift+h"
    },
    "tab_close": {
      "label": "Close Tab",
      "type": "keyboard",
      "repeatable": false,
      "shortcut": "ctrl+w",
      "shortcut_mac": "cmd+w"
    },
    "window_close": {
      "label": "Close Window",
      "type": "keyboard",
      "repeatable": false,
      "shortcut": "ctrl+shift+w",
      "shortcut_mac": "cmd+shift+w"
    },
    "window_minimize": {
      "label": "Minimize Window",
      "type": "system",
      "repeatable": false,
      "command": "minimize_window"
    },
    "window_maximize": {
      "label": "Maximize Window",
      "type": "system",
      "repeatable": false,
      "command": "maximize_window"
    },
    "tab_move_right": {
      "label": "Move Tab Right",
      "type": "keyboard",
      "repeatable": false,
      "shortcut": "ctrl+shift+pgdn",
      "shortcut_mac": "cmd+shift+]"
    },
    "tab_move_left": {
      "label": "Move Tab Left",
      "type": "keyboard",
      "repeatable": false,
      "shortcut": "ctrl+shift+pgup",
      "shortcut_mac": "cmd+shift+["
    },
    "fullscreen_toggle": {
      "label": "Toggle Fullscreen",
      "type": "keyboard",
      "repeatable": false,
      "shortcut": "F11",
      "shortcut_mac": "cmd+ctrl+f"
    },
    "refresh_page": {
      "label": "Refresh Page",
      "type": "keyboard",
      "repeatable": false,
      "shortcut": "F5",
      "shortcut_mac": "cmd+r"
    },
    "scroll_up": {
      "label": "Scroll Up",
      "type": "scroll",
      "repeatable": true,
      "direction": "up",
      "amount": 100
    },
    "scroll_down": {
      "label": "Scroll Down",
      "type": "scroll",
      "repeatable": true,
      "direction": "down",
      "amount": 100
    },
    "scroll_stop": {
      "label": "Stop Scrolling",
      "type": "scroll",
      "repeatable": false,
      "direction": "stop"
    },
    "back": {
      "label": "Go Back",
      "type": "keyboard",
      "repeatable": false,
      "shortcut": "alt+left",
      "shortcut_mac": "cmd+["
    },
    "forward": {
      "label": "Go Forward",
      "type": "keyboard",
      "repeatable": false,
      "shortcut": "alt+right",
      "shortcut_mac": "cmd+]"
    },
    "cursor_activate": {
      "label": "Activate Web Cursor",
      "type": "cursor",
      "repeatable": false,
      "cursor_action": "activate"
    },
    "cursor_move": {
      "label": "Move Web Cursor",
      "type": "cursor",
      "repeatable": true,
      "cursor_action": "move"
    },
    "text_select_start": {
      "label": "Start Text Selection",
      "type": "text_selection",
      "repeatable": false,
      "selection_action": "start"
    },
    "text_select_drag": {
      "label": "Drag to Select Text",
      "type": "text_selection",
      "repeatable": true,
      "selection_action": "drag",
      "char_sensitivity": 50,
      "line_sensitivity": 15
    },
    "text_search_google": {
      "label": "Search Selected Text on Google",
      "type": "text_selection",
      "repeatable": false,
      "selection_action": "search"
    }
  },
  "gestures": {
    "FIST": {
      "label": "Fist",
      "type": "static",
      "hand": "any",
      "enabled": true,
      "description": "All fingers closed"
    },
    "PALM": {
      "label": "Open Palm",
      "type": "static",
      "hand": "any",
      "enabled": true,
      "description": "All fingers extended"
    },
    "THUMBS_UP": {
      "label": "Thumbs Up",
      "type": "static",
      "hand": "any",
      "enabled": true,
      "description": "Thumb extended, all other fingers closed"
    },
    "PEACE": {
      "label": "Peace Sign",
      "type": "static",
      "hand": "any",
      "enabled": true,
      "description": "Index and middle fingers extended in V shape"
    },
    "INDEX_ONLY": {
      "label": "Index Finger Only",
      "type": "static",
      "hand": "any",
      "enabled": true,
      "description": "Only index finger extended (no middle finger)"
    },
    "OK": {
      "label": "OK Sign",
      "type": "static",
      "hand": "any",
      "enabled": true,
      "description": "Thumb and index finger touching, other fingers extended"
    },
    "POINTING_UP": {
      "label": "Pointing Up",
      "type": "static",
      "hand": "any",
      "enabled": true,
      "description": "Index finger pointing upward"
    },
    "POINTING_DOWN": {
      "label": "Pointing Down",
      "type": "static",
      "hand": "any",
      "enabled": true,
      "description": "Index finger pointing downward"
    },
    "SWIPE_LEFT": {
      "label": "Swipe Left",
      "type": "dynamic",
      "hand": "any",
      "enabled": true,
      "description": "Quick horizontal movement to the left"
    },
    "SWIPE_RIGHT": {
      "label": "Swipe Right",
      "type": "dynamic",
      "hand": "any",
      "enabled": true,
      "description": "Quick horizontal movement to the right"
    },
    "SWIPE_UP": {
      "label": "Swipe Up",
      "type": "dynamic",
      "hand": "any",
      "enabled": true,
      "description": "Quick vertical movement upward"
    },
    "SWIPE_DOWN": {
      "label": "Swipe Down",
      "type": "dynamic",
      "hand": "any",
      "enabled": true,
      "description": "Quick vertical movement downward"
    },
    "WAVE": {
      "label": "Wave",
      "type": "dynamic",
      "hand": "any",
      "enabled": true,
      "description": "Side-to-side oscillating motion"
    },
    "TWO_FISTS": {
      "label": "Two Fists Together",
      "type": "combo",
      "enabled": true,
      "combo_rule": ["FIST", "FIST"],
      "description": "Both hands in fist position"
    }
  },
  "bindings": {
    "_comment": "PREDEFINED BINDINGS - mapped to built-in gestures",
    "PALM": "tab_new",
    "FIST": "tab_close",
    "SWIPE_RIGHT": "tab_switch_right",
    "SWIPE_LEFT": "tab_switch_left",
    "SWIPE_UP": "window_minimize",
    "SWIPE_DOWN": "window_maximize",
    "WAVE": "refresh_page",
    "THUMBS_UP": "fullscreen_toggle",
    "PEACE": "cursor_activate",
    "INDEX_ONLY": "text_select_start",
    "OK": "text_search_google",
    "POINTING_UP": "scroll_up",
    "POINTING_DOWN": "scroll_down",
    "TWO_FISTS": "scroll_stop",
    
    "_comment_user_defined": "USER-DEFINED BINDINGS - capture landmarks and map to actions",
    "_user_new_window": "Capture gesture for: new_window",
    "_user_new_incognito": "Capture gesture for: new_incognito_window",
    "_user_tab_reopen": "Capture gesture for: tab_reopen",
    "_user_tab_rightmost": "Capture gesture for: tab_jump_rightmost",
    "_user_go_home": "Capture gesture for: go_home",
    "_user_window_close": "Capture gesture for: window_close",
    "_user_tab_move_right": "Capture gesture for: tab_move_right",
    "_user_tab_move_left": "Capture gesture for: tab_move_left",
    "_user_back": "Capture gesture for: back",
    "_user_forward": "Capture gesture for: forward"
  },
  "custom_gestures": {
    "_metadata": {
      "description": "User-defined gestures are stored here",
      "next_id": 1
    }
  },
  "cursor_layer": {
    "enabled": true,
    "smoothing": 0.7,
    "speed_multiplier": 1.5,
    "pinch_threshold": 0.05,
    "click_hold_time": 0.3
  },
